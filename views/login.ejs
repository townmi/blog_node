	// 登陆

	$(".js_login").on("click", function(){

		if(!$("#name").val() || !$("#password").val()) return;

		$.ajax({
			type: "post",
			url: "/login",
			data: {
				"name": $("#name").val(),
				"password": $("#password").val()
			},

			dataType: "json",

			success: function (data){

				if(data.login){

					window.location.href = '/';

				}

			},
			error: function (msg){

				console.log(msg)
			   	
			}
		})

	});

